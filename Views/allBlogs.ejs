<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Blogs</title>
    <link rel="stylesheet" href="../css/allblog.css">
    <link rel="stylesheet" href="../css/styleguide.css">
</head>
<body>
  <%- include('../partials/navbar.ejs', { data }) %>
    <h1 style="padding: 10px; margin: 10px;"><%= data.head %></h1>
    <div class="contain">
    <% data.blogs.forEach(item=>{ %>
    <div class="card" style="background-image: url('/uploads/<%= item.image %>');
                            background-size: cover;
                            background-repeat: no-repeat;
                            background-position: center center;
                            ">
        <div class="remove-when-use" >
          <label></label>
        </div>
        <div class="details">
          <label> <%= item.title %></label>
          <p>
            <%= item.desc %>
            <br>
            <i>Author : <%= item.author %></i>
          </p>
        </div>
        <!-- <div>
          <button class="edit">edit</button><button class="delete">delete</button>
        </div> -->
        
      </div>
      
      <% }) %>
    </div>

</body>
</html>