<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= blog.title %> - Blogging Platform</title>
  <link rel="stylesheet" href="/public/css/styleguide.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Roboto:wght@400;500&display=swap" rel="stylesheet">
</head>
<body class="bg-dark">
  <!-- Navbar -->
  <%- include('partials/navbar') %>

  <!-- Single Blog Section -->
  <section class="container mx-auto py-8 px-4">
    <div class="max-w-4xl mx-auto bg-white p-6 rounded-lg shadow-lg">
      <header>
        <h1 class="text-3xl font-bold text-primary mb-4"><%= blog.title %></h1>
        <p class="text-sm text-gray-500 mb-4">Posted on <%= blog.createdAt.toLocaleDateString() %> by <%= blog.author %></p>
        <% if (blog.imageUrl) { %>
          <img src="<%= blog.imageUrl %>" alt="<%= blog.title %>" class="w-full h-auto rounded-lg mb-6">
        <% } %>
      </header>

      <article>
        <p class="text-lg text-textColor leading-relaxed mb-4"><%= blog.content %></p>
      </article>

      <!-- Author Info (Optional) -->
      <div class="mt-8 text-center">
        <p class="text-sm text-gray-500">Written by <span class="font-semibold"><%= blog.author %></span></p>
      </div>

      <!-- Comment Section (Optional) -->
      <div class="mt-8">
        <h2 class="text-2xl font-semibold mb-4">Comments</h2>
        <% if (comments && comments.length > 0) { %>
          <ul class="space-y-4">
            <% comments.forEach(comment => { %>
              <li class="border-b pb-4">
                <p class="font-semibold text-lg text-primary"><%= comment.name %></p>
                <p class="text-sm text-gray-600"><%= comment.body %></p>
              </li>
            <% }); %>
          </ul>
        <% } else { %>
          <p class="text-gray-500">No comments yet. Be the first to comment!</p>
        <% } %>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <%- include('partials/footer') %>

  <!-- Scripts -->
  <script src="/public/js/clienteditblog.js"></script>
</body>
</html>
